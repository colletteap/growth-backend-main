files:
  "/etc/nginx/conf.d/proxy_buffers.conf":
    mode: "000644"
    owner: root
    group: root
    content: |
      # Increase buffer size for handling larger headers
      client_header_buffer_size 16k;
      large_client_header_buffers 4 32k;

      # Additional configurations for health checks and large requests
      client_max_body_size 10m;
      proxy_buffer_size 8k;
      proxy_buffers 4 32k;
      proxy_busy_buffers_size 64k;

      # Specific configuration for /health endpoint
      location = /health {
          # Ensure no cookies or extra headers interfere with health check
          proxy_set_header Cookie "";
          proxy_set_header Host $host;
          proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;

          # Return a basic health response or forward it to the application
          return 200; # Replace this with proxy_pass if health is dynamically generated
      }

container_commands:
  01_reload_nginx:
    command: "sudo systemctl reload nginx"
