option_settings:

  aws:elasticbeanstalk:environment:
    EnvironmentType: LoadBalanced

  
  aws:ec2:instances:
    EnableSpot: true 

  aws:autoscaling:launchconfiguration:
    InstanceType: t3.small 
    RootVolumeType: gp3 
    BlockDeviceMappings: /dev/xvda=gp3 

  aws:autoscaling:asg:
    MinSize: 1
    MaxSize: 4
    DesiredCapacity: 1
    CapacityRebalance: true 
